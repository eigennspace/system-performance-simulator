{
  "name": "system-performance-simulator",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "app/shared-types",
    "app/simulation-engine",
    "app/backend",
    "app/frontend"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "dev:backend": "npm --workspace app/backend run dev",
    "dev:frontend": "npm --workspace app/frontend run dev",
    "build": "npm-run-all build:shared build:engine build:backend build:frontend",
    "build:shared": "npm --workspace app/shared-types run build",
    "build:engine": "npm --workspace app/simulation-engine run build",
    "build:backend": "npm --workspace app/backend run build",
    "build:frontend": "npm --workspace app/frontend run build",
    "test": "npm run test:engine && npm run test:backend",
    "test:engine": "npm --workspace app/simulation-engine run test",
    "test:backend": "npm --workspace app/backend run test"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  }
}
